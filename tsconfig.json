{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "paths": {
      "~/*": ["./*"]
    },
    "plugins": [{ "name": "next" }],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
    "types": ["jest", "node"]
  },
  "include": [
    "config.js",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "jest.config.ts",
    "next-i18next.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
